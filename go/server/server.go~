package main

import (
	"bitbucket.org/ortutay/bitnet"
	"github.com/gorilla/rpc"
	"github.com/gorilla/rpc/json"
	"fmt"
	"net/http"
)

func main() {
	addr := "localhost:4000"
	fmt.Printf("Listening on %v...\n", addr)
	s := rpc.NewServer()
	s.RegisterCodec(json.NewCodec(), "application/json")
	s.RegisterService(new(BitnetService), "")
	http.Handle(addr, s)
}

type BitnetService struct {}

func (b *BitnetService) GetTokens(r *http.Request, args *GetTokensArgs, reply *GetTokensReply) error {
	reply.Message = "Reply [" + args.Message + "]"
	return nil
}
